        <span class="input-group-text" id="basic-addon1">Element Filter</span>
        <input
            type="text"
            placeholder="Filter"
            aria-label="Filter"
            aria-describedby="basic-addon1"
            @bind-value="elementFilterText"
            @oninput="@((ChangeEventArgs e) => InvokeAsync(() => RebuildFilteredElements(e?.Value?.ToString() ?? "")))"
            />
    </div>*@

    <div class="m-2 row">
