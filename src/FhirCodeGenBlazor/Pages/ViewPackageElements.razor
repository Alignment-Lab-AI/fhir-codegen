                                {
                                    <p><strong>Bound to:</strong> @rec.Element.ValueSet (@rec.Element.ValueSetBindingStrength)</p>
                                }

                                @if (!string.IsNullOrEmpty(rec.Element.ValidationRegEx))
                                {
                                    <p><strong>Validation RegEx:</strong> @rec.Element.ValidationRegEx</p>
                                }
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
